# ========================================
# REVVDOCTOR ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local and fill in your values

# ----------------------------------------
# Supabase Configuration
# ----------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ----------------------------------------
# Email Provider Configuration
# ----------------------------------------
# Choose one: brevo, ses, or resend
EMAIL_PROVIDER=resend

# From email address (MUST be verified in your email provider)
# Format: "Display Name <email@yourdomain.com>"
# For Resend: Use the email you verified in your Resend domain settings
EMAIL_FROM_ADDRESS="Revvdoctor <noreply@revvdoctor.com>"

# Brevo (300 emails/day free)
BREVO_API_KEY=your_brevo_api_key_here

# Amazon SES (requires AWS credentials)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Resend (100 emails/day free)
RESEND_API_KEY=your_resend_api_key_here

# ----------------------------------------
# AI Configuration
# ----------------------------------------
# OpenRouter for AI vehicle classification
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ----------------------------------------
# Inngest Configuration
# ----------------------------------------
# For local development, leave blank (uses local dev server)
# For production, get from Inngest dashboard
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# ----------------------------------------
# Scraper Configuration
# ----------------------------------------
# Mode: mock (default), api, or html
SCRAPER_MODE=mock

# ----------------------------------------
# Next.js Configuration
# ----------------------------------------
# Your production URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000
