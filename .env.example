# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================
# SCRAPER CONFIGURATION
# ============================================================

# Scraper Mode: "mock" | "api" | "html"
# - "mock" = Use test data (recommended for initial testing)
# - "api" = Use auction site APIs (production, requires API keys below)
# - "html" = Web scraping (fallback, less reliable, may break)
SCRAPER_MODE=mock

# RAW2K API (get from https://www.raw2k.co.uk)
RAW2K_API_KEY=your-raw2k-api-key
RAW2K_API_URL=https://api.raw2k.co.uk/v1

# BCA API (requires partnership - https://www.bca.co.uk/partner-services)
BCA_API_KEY=your-bca-api-key
BCA_API_SECRET=your-bca-api-secret
BCA_API_URL=https://api.bca.co.uk/v1

# Autorola API (requires dealer account - https://www.autorola.co.uk)
AUTOROLA_CLIENT_ID=your-autorola-client-id
AUTOROLA_CLIENT_SECRET=your-autorola-client-secret
AUTOROLA_API_URL=https://api.autorola.com/v1

# Manheim API (requires dealer account - https://www.manheim.co.uk)
MANHEIM_API_KEY=your-manheim-api-key
MANHEIM_DEALER_ID=your-dealer-id
MANHEIM_API_URL=https://api.manheim.com/v1

# ============================================================
# AI PROVIDER CONFIGURATION
# ============================================================

# AI Provider Configuration
# Provider: "openrouter" (recommended, free) or "openai" (paid)
AI_PROVIDER=openrouter

# OpenRouter API Key (FREE - get from https://openrouter.ai/keys)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# OR use OpenAI directly (paid)
# OPENAI_API_KEY=sk-your-openai-key

# AI Model Selection
# Free models on OpenRouter:
# - google/gemini-flash-1.5-8b (recommended, very fast)
# - google/gemini-2.0-flash-exp:free
# - meta-llama/llama-3.1-8b-instruct:free
# - mistralai/mistral-7b-instruct:free
# - qwen/qwen-2-7b-instruct:free
AI_MODEL=google/gemini-flash-1.5-8b

# App URL (for OpenRouter referrer)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Inngest Configuration (for workflow automation)
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# ============================================================
# EMAIL PROVIDER CONFIGURATION
# ============================================================

# Email Provider: "brevo" (recommended, free) | "ses" (cheapest at scale) | "resend" (dev-friendly)
# - "brevo" = 300 emails/day FREE, $25/month for 20k (RECOMMENDED)
# - "ses" = 62,000 emails/month FREE, $0.10 per 1k after (cheapest at scale)
# - "resend" = 100 emails/day FREE, $20/month for 50k (dev-friendly)
EMAIL_PROVIDER=brevo

# Brevo API Key (FREE: 300 emails/day - get from https://app.brevo.com/settings/keys/api)
BREVO_API_KEY=xkeysib-your-key-here

# Amazon SES (for scale - FREE: 62,000/month)
# Get from AWS Console > SES > SMTP Settings
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Resend (fallback option - FREE: 100 emails/day)
# RESEND_API_KEY=re_your-resend-key

# N8N Webhook (Optional - not required for agent workflow)
# N8N_WEBHOOK_URL=https://your-n8n-instance.com
